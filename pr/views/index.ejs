<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="/addData" method="post">
        <input type="text" placeholder="Enter ID.." name="id"
        <input type="text" placeholder="Enter name.." name="name">
        <input type="text" placeholder="Enter author.." name="author">
        <input type="text" placeholder="Enter price" name="city">
        <input type="text" placeholder="Enter releasedDate" name="releasedDate">
        <input type="text" name="img" placeholder="Enter Image : ">
        <button type="submit">Submit</button>
    </form>

    <br>
    <table border="2">
        <thead>
            <tr> 
                <th>Id</th>
                <th>Name</th>
                <th>Author</th>
                <th>price</th>
                <th>releasedDate</th>
                <th>Image</th>
                <th colspan="2">Action</th>
            </tr>
        </thead>

        <tbody>
            <%data.map((e,i) => {%>
                <tr>
                    <td><%=e.Id%></td>
                    <td><%=e.name%></td>
                    <td><%=e.Author%></td>
                    <td><%=e.price%></td>
                    <td><%=e.releasedDate%></td>
                    <td><img src="<%=e.img%>" alt=""></td>
                    <td>
                        <a href="/editData?id=<%=e.id%>">
                            <button>Edit</button>
                        </a>
                    </td>
                    <td>
                        <a href="/deleteData?id=<%=e.id%>">
                            <button>Delete</button>
                        </a>
                    </td>
                </tr>
            <%})%>
        </tbody>
    </table>
</body>
</html>